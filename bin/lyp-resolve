#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path("../lib", File.dirname(__FILE__))

require 'lyp'

package = Lyp::DependencyResolver.find_package(ARGV[0])

if package
  puts "'((name . #{package.name.inspect}) 
          (version . #{package.version.inspect})
          (path . #{package.path.inspect}))"
  #STDOUT << package.path
else
  exit(1)
end
